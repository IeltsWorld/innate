<div 
class =" text-4xl font-bold tracking-tight text-gray-900 sm:text-4xl"
data-controller = "courses"
>
    <div class="w-full container mx-auto">
        <div class="flex flex-col items-center py-6">
            <div class="font-bold text-green-700 uppercase hover:text-green-400 text-4xl" href="#">
                Courses Gallery
            </div>
            <p class="text-lg text-gray-600">
            Browse the best courses and blogs...
            </p>
        </div>
    </div>


    <div class = "container mx-auto py-16 ">
        <ul role="list" class= " grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-4 xl:gap-X-8  ">
        <% @freecourses.each do |freecourse| %>
            <%= link_to freecourse_path(freecourse) do %>
            <li class= "relative">

                <div class= "group block w-full aspect-w-10 aspect-h-7 overflow-hidden shadow-lg rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 "> 
                        <%= image_tag freecourse.default_image , class: "object-cover pointer-events-none group-hover:opacity-75" %>
                        <button type="button" class="absolute inset-0 focus:outline-none">
                            <span class="sr-only">View detalls for IMG 4985.HEIC</span>
                        </button>
                        <div class="flex flex-row-reverse p-1">
                            <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            fill ="white"
                            viewBox="0 0 24 24"
                            data-controller = "favourites"
                            data-action = "click->favourites#favourite"
                            data-user-logged-in = "<%= user_signed_in?%>"
                            data-user-id = "<%= current_user&.id%>"
                            data-freecourse-id = "<%= freecourse.id%>"
                            data-favourite-url = "<%= api_favourites_path %>"
                            data-favourited = "false"
                            stroke-width="1.5" 
                            stroke="currentColor" 
                            class="w-8 h-8 cursor-pointer"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                            </svg>
                        </div>
                </div>
                <p class="mt-2 block text-2xl font-bold text-gray-900 truncate "> Name :<%= freecourse.name %>
                </p>
                <p class="mt-2 block text-lg font-medium text-gray-900 truncate pointer-events-none">
                        <span>               
                            <img class = "w-6 h-7 object-cover inline-block" src="https://user-images.githubusercontent.com/85568177/186888361-b53dbe71-ffae-4d95-87cc-25595fb49633.jpg">          
                        </span>    
                    <%= freecourse.author %>  
                </p>
                <hr style="height:1pt; visibility:hidden;" />
        
                <p class= "block text-base font-medium text-black pointer-events-none"> 
                    </t>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="yellow" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline-block relative " style="bottom: 2px;">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                    </svg>
                    <%= freecourse.average_rating %> </span>

                <hr style="height:3pt; visibility:hidden;" />

                <span class= "block text-base font-medium text-gray-500 pointer-events-none"> ✏️
                    </t>
                    <%= freecourse.headling.first(100) %> 
                </span>
                <hr style="height:10pt; visibility:hidden;" />

                <p class=" inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#free
                <p class=" inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#english
                </p>
            </li>
                <% end %>
        <% end %>
        </ul>
    </div>
</div>